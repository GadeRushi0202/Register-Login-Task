@model RegisterLogin.Models.Users

@{
    ViewData["Title"] = "Login";
}

<div class="d-flex align-items-center justify-content-center min-vh-100 bg-light">
    <div class="card shadow-lg p-4" style="width: 100%; max-width: 450px; border-radius: 15px;">
        <div class="card-body">
            <!-- Logo or Title -->
            <div class="text-center mb-4">
                <i class="fas fa-user-circle fa-5x text-primary"></i>
                <h2 class="mt-3">Welcome Back</h2>
                <p class="text-muted">Please login to your account</p>
            </div>

            <!-- Login Form -->
            <form asp-action="Login" method="post">
                <!-- Validation Summary -->
                <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                <!-- Username Field -->
                <div class="form-group mb-3 position-relative">
                    <label asp-for="UserName" class="form-label">Username</label>
                    <div class="input-group">
                        <span class="input-group-text"><i class="fas fa-user"></i></span>
                        <input asp-for="UserName" class="form-control" placeholder="Enter your username" required />
                    </div>
                    <span asp-validation-for="UserName" class="text-danger"></span>
                </div>

                <!-- Password Field -->
                <div class="form-group mb-4 position-relative">
                    <label asp-for="Password" class="form-label">Password</label>
                    <div class="input-group">
                        <span class="input-group-text"><i class="fas fa-lock"></i></span>
                        <input asp-for="Password" class="form-control" type="password" placeholder="Enter your password" required />
                    </div>
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>

                <!-- Login Button -->
                <div class="form-group d-grid mb-4">
                    <button type="submit" class="btn btn-primary btn-lg">
                        <i class="fas fa-sign-in-alt"></i> Login
                    </button>
                </div>

                <!-- Optional: Remember Me Checkbox -->
                <div class="form-check mb-3">
                    <input type="checkbox" class="form-check-input" id="rememberMe" />
                    <label class="form-check-label" for="rememberMe">Remember Me</label>
                </div>

                <!-- Optional: Register / Forgot Password Links -->
                <div class="text-center">
                    <a asp-area="" asp-controller="User" asp-action="Create" class="text-primary">Don't have an account? Register</a><br />
                    <a href="#" class="text-muted">Forgot your password?</a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <!-- Font Awesome for Icons -->
    <script src="https://kit.fontawesome.com/a076d05399.js" crossorigin="anonymous"></script>
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}


