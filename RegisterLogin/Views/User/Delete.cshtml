@model RegisterLogin.Models.Users

@{
    ViewData["Title"] = "Delete Account";
}

<!-- Full Page Background with Centered Card -->
<div class="d-flex justify-content-center align-items-center min-vh-100" style="background-color: #f8f9fa;">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-lg-6 col-md-8 col-sm-10">
                <div class="card shadow-sm" style="border-radius: 10px;">

                    <!-- Header -->
                    <div class="card-header text-center" style="background-color: #dc3545; color: white; border-radius: 10px 10px 0 0;">
                        <h2 class="font-weight-bold">Delete Account</h2>
                        <p>Are you sure you want to delete this account?</p>
                    </div>

                    <!-- User Details Display -->
                    <div class="card-body">
                        <h4 class="text-center mb-4">User Details</h4>
                        <dl class="row">

                            <!-- ID -->
                            <dt class="col-sm-4">ID</dt>
                            <dd class="col-sm-8">@Html.DisplayFor(model => model.Id)</dd>

                            <!-- First Name -->
                            <dt class="col-sm-4">First Name</dt>
                            <dd class="col-sm-8">@Html.DisplayFor(model => model.FirstName)</dd>

                            <!-- Last Name -->
                            <dt class="col-sm-4">Last Name</dt>
                            <dd class="col-sm-8">@Html.DisplayFor(model => model.LastName)</dd>

                            <!-- Username -->
                            <dt class="col-sm-4">Username</dt>
                            <dd class="col-sm-8">@Html.DisplayFor(model => model.UserName)</dd>

                            <!-- Email -->
                            <dt class="col-sm-4">Email</dt>
                            <dd class="col-sm-8">@Html.DisplayFor(model => model.Email)</dd>

                            <!-- Gender -->
                            <dt class="col-sm-4">Gender</dt>
                            <dd class="col-sm-8">@Html.DisplayFor(model => model.Gender)</dd>

                            <!-- Phone Number -->
                            <dt class="col-sm-4">Phone Number</dt>
                            <dd class="col-sm-8">@Html.DisplayFor(model => model.PhoneNumber)</dd>

                            <!-- Date of Birth (DoB) -->
                            <dt class="col-sm-4">Date of Birth</dt>
                            <dd class="col-sm-8">@Html.DisplayFor(model => model.DoB)</dd>

                            <!-- Password (Optional to display) -->
                            <dt class="col-sm-4">Password</dt>
                            <dd class="col-sm-8">@Html.DisplayFor(model => model.Password)</dd>

                            <!-- Confirm Password (Optional to display) -->
                            <dt class="col-sm-4">Confirm Password</dt>
                            <dd class="col-sm-8">@Html.DisplayFor(model => model.ConfirmPassword)</dd>

                        </dl>

                        <!-- Confirmation Form -->
                        <form asp-action="Delete" method="post" class="text-center">
                            <input type="submit" value="Delete" class="btn btn-danger btn-lg" />
                            <a asp-action="Index" class="btn btn-secondary btn-lg ms-2">Back to List</a>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

